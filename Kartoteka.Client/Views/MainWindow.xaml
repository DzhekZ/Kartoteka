<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kartoteka.Client"
        xmlns:Views="clr-namespace:Kartoteka.Client.Views" x:Class="Kartoteka.Client.MainWindow"
        mc:Ignorable="d"
        Title="Картотека" Height="450" Width="800">
    <Grid>
        <Menu x:Name="menu" Height="20" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" x:Name="MenuExit" Command="{Binding ExitFromApplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="Работа">
                <MenuItem Header="Пользователи" x:Name="MenuChitateli" Command="{Binding ShowChitateliMainCommand}"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
