<Window x:Class="ReacUI.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReacUI.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu x:Name="menu" Height="20" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" x:Name="MenuExit" Command="{Binding ExitFromApplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="Работа">
                <MenuItem Header="Пользователи" x:Name="MenuChitateli" Command="{Binding ShowChitateliMainCommand}"/>
            </MenuItem>
        </Menu>
        <DataGrid x:Name="dataGrid" Margin="0,25,0,25" Visibility="Visible" ItemsSource="{Binding Path=usersForView}" AutoGenerateColumns="False" IsSynchronizedWithCurrentItem="True" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Number" Binding="{Binding Number}" Width="*" />
                <DataGridTextColumn Header="FIO" Binding="{Binding FullName}" Width="*" />
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="*" />
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <DockPanel VerticalAlignment="Bottom" Height="20">
            <TextBlock x:Name="selectedRow" TextWrapping="Wrap" Text="TextBlock" HorizontalAlignment="Left"/>
            <Button x:Name="bSelect" Command="{Binding SelectRowNumberCommand}" Content="Select" VerticalAlignment="Center" Width="75" HorizontalAlignment="Right"/>
        </DockPanel>
    </Grid>
</Window>
