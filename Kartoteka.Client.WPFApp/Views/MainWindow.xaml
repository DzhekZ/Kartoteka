<Window x:Class="Kartoteka.Client.WPFApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xaml="clr-namespace:ReactiveUI;assembly=ReactiveUI"
        mc:Ignorable="d"
        Title="Картотека" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu x:Name="menu" Height="20" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" x:Name="MenuExit" Command="{Binding ExitFromApplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="Приложение">
                <MenuItem Header="Пользователи" Command="{Binding ShowChitateliMainCommand}"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
